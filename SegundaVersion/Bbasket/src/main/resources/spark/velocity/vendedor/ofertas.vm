            <div class="container-sm text-center" id="pnloferta">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Escriba el id de el producto..." id="producto">
                    <div class="input-group-append">
                        <button class="btn btn-outline-primary" type="button" id="buscar">Buscar</button>
                    </div>
                </div>
                <div class="container">

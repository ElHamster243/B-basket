<div class="container">
    <h1>Agregar un producto</h1>
    <div class="row">
        <div class="col-6">
            <label for="nombre_new">$Nombre</label>
            <input type="text" class="form-control" id="nombre_new">
            <label for="tamanio_new">$Tamanio</label>
            <input type="text" class="form-control" id="tamanio_new">
            <label for="medida_new">$Medida</label>
            <select class="form-control">
                <option>Gr</option>
                <option>Kg</option>
                <option>Lts</option>
            </select>
            <label for="cantidad_new">$Cantidad</label>
            <input type="text" class="form-control" id="cantidad_new">
        </div>
        <div class="col-6">
            <img style="width:50%;" src="http://lorempixel.com/500/200">
        </div>
    </div>
</div>
<div class="container">
    </br>
    <div class="row">
        <div class="col-3">
            <button class="btn btn-secondary btn-outline my-2 my-sm-0" style="width: 100%;" type="submit">Borrar</button>
        </div>
        <div class="col-3">
            <button class="btn btn-secondary btn-outline my-2 my-sm-0" style="width: 100%;" type="submit">Actualizar</button>
        </div>
        <div class="col-3">
            <button class="btn btn-secondary btn-outline my-2 my-sm-0" style="width: 100%;" type="submit">Crear</button>
        </div>
    </div>
</div>
<div class="container">
    </br>
    </br>
    <table class="table table-striped table-dark table-hover table-bordered mb-0">
    #foreach( $vista in $vistas )
        <tr>
            <td>$vista.getId()</td>
            <td>$vista.getNombre()</td>
            <td>$vista.getPrecio()</td>
            <td>$vista.getTamanio()</td>
            <td>Validacion de imagen</td>
        </tr>
    #end
</table>
</div>
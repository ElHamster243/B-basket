<div class="jumbotron jumbotron-fluid bg-secondary"  id="perfil">
  <h1 class="display-5"  data-toggle="tooltip" data-placement="top" title="Título de bienvenida">Bienvenido $usuario</h1>
  <div class="container">
    <div class="col-sm" id="pnlDetalles">
      <div class="row">
        <div class="col-sm align-middle">
          <img src="assets/img/$fotodelperfil" alt="foto" width="200px" class="img-thumbnail mx-auto rounded d-block "  data-toggle="tooltip" data-placement="top" title="Imágen del perfil">
        </div>
        <div class="col-sm">
          <div class="list-group">
            <p class="list-group-item bg-secondary" data-toggle="tooltip" data-placement="top" title="Nombre del usuario">Nombre: $!usuario.nombre</p>
            <p class="list-group-item bg-secondary" data-toggle="tooltip" data-placement="top" title="Nombre de usuario del usuario">Usuario: $!usuario.username</p>
            <p class="list-group-item bg-secondary" data-toggle="tooltip" data-placement="top" title="Correo de usuario">Correo: $!usuario.correo</p>
          </div>
        </div>
        <div class="container">
          <h1  data-toggle="tooltip" data-placement="top" title="Área de ofertas destacadas">Ofertas destacadas</h1>
          <div class="row mb-3">
            <div class="col">
              <div>
                <img style="width:100px;" src="https://www.coca-colaentuhogar.com/media/catalog/product/cache/9fb819452282e0f6131d8f060ad13229/5/0/500ml_4.png" data-toggle="tooltip" data-placement="top" title="Imágen de oferta">
              </div>
              <div>
                <button class="btn" data-toggle="tooltip" data-placement="top" title="Botón con destino a oferta">$ofertas.oferta1</button>
              </div>
            </div>
            <div class="col">
              <div>
                <img style="width:100px;" src="https://www.coca-colaentuhogar.com/media/catalog/product/cache/9fb819452282e0f6131d8f060ad13229/5/0/500ml_4.png" data-toggle="tooltip" data-placement="top" title="Imágen de oferta">
              </div>
              <div>
                <button class="btn" data-toggle="tooltip" data-placement="top" title="Botón con destino a oferta">$ofertas.oferta2</button>
              </div>
            </div>
            <div class="col">
              <div  id="lube" >
                <img style="width:100px;" src="https://www.coca-colaentuhogar.com/media/catalog/product/cache/9fb819452282e0f6131d8f060ad13229/5/0/500ml_4.png" data-toggle="tooltip" data-placement="top" title="Imágen de oferta">
              </div>
              <div>
                <button class="btn" data-toggle="tooltip" data-placement="top" title="Botón con destino a oferta">$ofertas.oferta3</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
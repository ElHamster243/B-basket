<div class="container shadow-lg p-3 mb-5 rounded" id="registro">
    <p class="h3 text-center">Crear una cuenta en $proyecto</p>
    <div class="col-sm shadow-lg p-3 mb-5 rounded">
        <form>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="email_new">Correo electrónico</label>
                    <input type="email" class="form-control" id="email_new">
                </div>
                <div class="form-group col-md-6">
                    <label for="passwd_new">Contraseña</label>
                    <input type="password" class="form-control" id="passwd_new">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="nombres_new">Nombre(s)</label>
                    <input type="text" class="form-control" id="nombres_new">
                </div>
                <div class="form-group col-md-6">
                    <label for="apellidos_new">Apellido(s)</label>
                    <input type="text" class="form-control" id="apellidos_new">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="usuario_new">Usuario</label>
                    <input type="text" class="form-control" id="usuario_new">
                </div>
                <div class="form-group col-md-6">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="foto">Imagen de perfil</span>
                    </div>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="foto">
                        <label class="custom-file-label" for="foto">Elige un archivo</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary col">Registrarme</button>
        </form>
    </div>
</div>